{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "typescript": {
      "type": "boolean"
    },
    "globalCss": {
      "type": "string"
    },
    "mastercss": {
      "type": "object",
      "properties": {
        "config": {
          "type": "string"
        },
        "cssVariables": {
          "type": "boolean"
        }
      },
      "required": ["config", "cssVariables"]
    },
    "aliases": {
      "type": "object",
      "properties": {
        "components": {
          "type": "string"
        },
        "utils": {
          "type": "string"
        }
      },
      "required": ["components", "utils"]
    }
  },
  "required": ["globalCss", "mastercss", "aliases"]
}
